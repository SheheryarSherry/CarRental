@model Carrent.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row fullscreen d-flex align-items-center justify-content-center">
<div class="col-lg-5  col-md-6 header-right">
    <h4 class="text-white pb-30">Create New Login</h4>


    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control txt-field", placeholder = "Your Email" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control txt-field", placeholder = "Password" })
             @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control txt-field", placeholder = "Confirm Password" })
        </div>
        
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-default btn-lg btn-block text-center text-uppercase" value="Register" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Already Have Account? Login here", "Login")
        </p>
    }
    </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
